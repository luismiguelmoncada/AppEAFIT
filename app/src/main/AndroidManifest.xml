<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.universidadeafit.appeafit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Views.Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Views.LoginActivity" />

        <activity
            android:name=".Views.RegisterActivity"
            android:parentActivityName=".Views.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Views.LoginActivity" />
        </activity>

        <activity
            android:name=".Views.NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme" />

        <activity android:name=".Views.PerfilActivity"
            android:parentActivityName=".Views.NavigationDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Views.NavigationDrawerActivity" />
        </activity>

        <activity android:name=".Views.SolicitudActivity"
            android:parentActivityName=".Views.NavigationDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Views.NavigationDrawerActivity" />
        </activity>

        <activity android:name=".Views.DetalleVehiculos"
            android:parentActivityName=".Views.NavigationDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Views.NavigationDrawerActivity" />
        </activity>

        <activity android:name=".Views.AsistenteActivity"
            android:parentActivityName=".Views.SolicitudActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Views.SolicitudActivity" />
        </activity>

    </application>

</manifest>