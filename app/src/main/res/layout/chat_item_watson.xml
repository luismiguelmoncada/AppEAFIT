<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_bubble_blue_wat"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_face_asistent"
        android:layout_marginLeft="@dimen/item_margin_chat"/>
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="@dimen/item_margin_chat"
        android:layout_marginBottom="1dp"
        android:textIsSelectable="true"
        android:background="@drawable/bg_bubble_blue"
        android:textSize="@dimen/item_textsize_chat"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:28 am"
            />
        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proponer otra respuesta"
            android:layout_marginLeft="2dp"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_respuesta"
            android:layout_toLeftOf="@+id/edit"/>
    </RelativeLayout>

</RelativeLayout>
