<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_face_asistent"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="@dimen/item_margin_chat"/>
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="@dimen/item_margin_chat"
        android:layout_marginBottom="1dp"
        android:textIsSelectable="true"
        android:background="@drawable/bg_bubble_white"
        android:textSize="@dimen/item_textsize_chat"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-03-03 11:28 am"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/item_margin_chat"
            />

    </RelativeLayout>

</RelativeLayout>
