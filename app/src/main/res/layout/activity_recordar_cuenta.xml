<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recordar_cuenta"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.universidadeafit.appeafit.Views.RecordarCuentaActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/recordar_cuenta_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_user"
                android:textSize="@dimen/text_size_label_login"
                android:drawableRight="@drawable/ic_user_white"
                android:inputType="textEmailAddress"
                tools:ignore="RtlHardcoded" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/enviar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Enviar"
            android:layout_marginTop="95dp"
            style="@style/RaisedButtonDark"
            />

        <Button
            android:id="@+id/volver"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Volver"
            android:layout_marginTop="95dp"
            android:layout_alignParentRight="true"
            style="@style/RaisedButtonDark"
             />

    </RelativeLayout>
</RelativeLayout>
