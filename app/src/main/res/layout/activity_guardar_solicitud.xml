<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_recordar_cuenta"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.universidadeafit.appeafit.Views.GuardarSolicitudActivity">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu Pregunta: "
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/pregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_pregunta"/>

    <TextView
        android:id="@+id/txt_sugerencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sugerencia: "
        android:textColor="@android:color/black"
        android:layout_below="@+id/pregunta"/>

    <EditText
        android:layout_below="@+id/txt_sugerencia"
        android:id="@+id/recordar_cuenta_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_user_white"

        android:hint="Escribe otras posibles formas de realizar la pregunta seleccionada"/>


    <Button
        android:id="@+id/enviar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Enviar"
        android:layout_below="@+id/recordar_cuenta_email"
        android:layout_marginTop="10dp"
        style="@style/RaisedButtonDark"
        />

    <Button
        android:id="@+id/volver_chat"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Volver"
        android:layout_below="@+id/recordar_cuenta_email"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        style="@style/RaisedButtonDark"
        />

</RelativeLayout>
</RelativeLayout>

