<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/item_margin_chat"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.universidadeafit.appeafit.Views.WatsonActivity"
    tools:showIn="@layout/activity_watson">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginBottom="60dp"
        android:paddingLeft="@dimen/item_margin_chat"
        android:paddingRight="@dimen/item_margin_chat"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:id="@+id/send_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/item_margin_chat">


        <EditText android:id="@+id/message"
            android:hint="@string/what_s_on_your_mind"
            android:background="@drawable/bg_bubble_write"
            android:layout_width="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_face_asistent"
            android:layout_weight="1"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_send_white"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2dp"
            android:text="Send"/>

    </LinearLayout>

</RelativeLayout>