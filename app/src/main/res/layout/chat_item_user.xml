<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="@drawable/bg_bubble_gradient_bluee"
android:layout_marginBottom="5dp">


<android.support.v7.widget.AppCompatImageView
    android:id="@+id/image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_user_hombre"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="@dimen/item_margin_chat"/>
<TextView
    android:id="@+id/message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/image"
    android:layout_marginLeft="@dimen/item_margin_chat"
    android:layout_marginBottom="1dp"
    android:textIsSelectable="true"
    android:clickable="true"
    android:background="@drawable/bg_bubble_gray"
    android:textSize="@dimen/item_textsize_chat"
    android:fontFamily="sans-serif"
    android:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_margin_chat"
            android:src="@drawable/ic_plus_add"/>

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar pregunta"
            android:layout_toRightOf="@+id/icon"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="@dimen/item_margin_chat"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:28 am"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/item_margin_chat"
            />
    </RelativeLayout>

</RelativeLayout>